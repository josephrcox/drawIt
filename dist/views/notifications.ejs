<head>
    <title>DrawIt | Notifications</title>
</head>
<h2>Notifications</h2>

<button id="clearAllNotifs" onclick="clearAllNotifications()">Clear all</button>
<div class="notif_area" id="notif_area"></div>

<script>
    async function clearAllNotifications() {
        const response = await fetch('/api/notifications/clearAll/'+localStorage.draw_user)
        const data = await response.json()

        if (data.status == "ok") {
            console.log('cleared all notifications')
            document.getElementById('notif_area').innerHTML = ''
        } else {
            console.log('failed to clear all notifications')
        }
    }
</script>