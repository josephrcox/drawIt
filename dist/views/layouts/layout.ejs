<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/dist/css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lora&display=swap" rel="stylesheet"> 
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-QLJ08TERQV"></script>
    <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-QLJ08TERQV');
    </script>
</head>
<body>    
    <div id="alertModal">
        <div style="border-radius:30px;padding:10px;">
            <img src="/dist/logo.svg" class="logo">
        </div>

        <h3></h3>
        <span id="modal_close">X</span>

        <button class="modal_ok" style="display: none;">OK</button>

        <input type="text" id="modal_login_input" style="display: none;" class="modal_login" autocapitalize="none" autocomplete="off">
        <button class="modal_login" style="display: none;" id="modal_login_submit">Login or create account</button>

        <input type="text" id="modal_cng_input" style="display: none;" class="modal_createnewgame" autocapitalize="none" autocomplete="off">
        <button class="modal_createnewgame" style="display: none;" id="modal_cng_submit">Get drawin'</button>

        <input type="text" id="modal_addword_input" style="display: none;" class="modal_addword" autocapitalize="none" autocomplete="off">
        <button class="modal_addword" style="display: none;" id="modal_addword_submit">Add word (100 coins)</button>


        <div id="modal_logs"></div>
    </div>
    <div class="modal" id="modal">
        Pick the next word!
        <button></button>
        <button></button>
        <button></button>
        <button id="newwords">New words (-5 coins)</button>
        <div>
            <br/>
            Use extended word list (experimental, pay for new words to sync decision)
            <input type="checkbox" id="extended"> 
        </div>

    </div>
    <div class='page-content'>
        <span id="currentScore" style="display: none;"></span>
        <span id="notifBell" style="display: none;"></span>
        <div class="header">
            <a href='/'><img src='/dist/logo.svg' class="logo"></a>
            <div>
                <button style="margin-top: 10px;" onclick="location.href = '/feed'">Feed</button>
                <button style="margin-top: 10px;" onclick="location.href = '/store'">Store</button>
            </div>

        </div>
        <%- body %>

        <div id="player_list"><h3>DrawIt Players (tap to start a game)</h3></div>

    </div>


    <script>
        let ex = document.getElementById("extended")
        if (localStorage.draw_extended != null) {
            ex.checked = localStorage.draw_extended == "true"
        } else {
            localStorage.draw_extended = "false"
            ex.checked = false
        }

        ex.addEventListener('change', function() {
            if (ex.checked) {
                localStorage.draw_extended = "true"
            } else {
                localStorage.draw_extended = "false"
            }
        })
    </script>

    <script src="/dist/scripts/frontend/main.js" type="module"></script>
</body>
</html>